---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}{{ site.baseurl }}/</link>
    <atom:link href="{{ site.url }}{{ site.baseurl }}/rss.xml" rel="self" type="application/rss+xml"/>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    <language>{{ site.lang | default: "nl" }}</language>
    <managingEditor>{{ site.email }} ({{ site.title }})</managingEditor>
    <webMaster>{{ site.email }} ({{ site.title }})</webMaster>
    
    {% assign summaries = site.pages | where: "layout", "summary" | sort: "git_published" | reverse %}
    {% for summary in summaries limit: 50 %}
    <item>
      {% if summary.title %}
      <title>{{ summary.title | xml_escape }}</title>
      {% else %}
      {% assign first_h1 = summary.content | markdownify | split: '<h1' | last | split: '</h1>' | first | split: '>' | last | strip_html %}
      <title>{{ first_h1 | xml_escape }}</title>
      {% endif %}
      <description>{{ summary.content | strip_html | truncatewords: 50 | xml_escape }}</description>
      <pubDate>{{ summary.git_published | default: summary.date | date_to_rfc822 }}</pubDate>
      <lastBuildDate>{{ summary.git_last_modified | default: summary.git_published | default: summary.date | date_to_rfc822 }}</lastBuildDate>
      <link>{{ site.url }}{{ site.baseurl }}{{ summary.url | xml_escape }}</link>
      <guid isPermaLink="true">{{ site.url }}{{ site.baseurl }}{{ summary.url | xml_escape }}</guid>
      {% if summary.test_code %}
      <category>{{ summary.test_code | xml_escape }}</category>
      {% endif %}
      {% assign path_parts = summary.path | split: "/" %}
      {% if path_parts.size > 1 %}
      <category>{{ path_parts[0] | xml_escape }}</category>
      {% if path_parts.size > 2 %}
      <category>{{ path_parts[1] | xml_escape }}</category>
      {% endif %}
      {% endif %}
    </item>
    {% endfor %}
  </channel>
</rss>