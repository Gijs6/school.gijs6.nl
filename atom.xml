---
layout: null
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <generator uri="https://jekyllrb.com/" version="{{ jekyll.version }}">Jekyll</generator>
  <link href="{{ site.url }}{{ site.baseurl }}/atom.xml" rel="self" type="application/atom+xml" />
  <link href="{{ site.url }}{{ site.baseurl }}/" rel="alternate" type="text/html" />
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ site.url }}{{ site.baseurl }}/</id>
  <title type="html">{{ site.title | xml_escape }}</title>
  <subtitle>{{ site.description | xml_escape }}</subtitle>
  <author>
    <name>{{ site.title }}</name>
    <email>{{ site.email }}</email>
  </author>

  {% assign summaries = site.pages | where: "layout", "summary" | sort: "git_published" | reverse %}
  {% for summary in summaries limit: 50 %}
  <entry>
    {% if summary.title %}
    <title type="html">{{ summary.title | xml_escape }}</title>
    <link href="{{ site.url }}{{ site.baseurl }}{{ summary.url | xml_escape }}" rel="alternate" type="text/html" title="{{ summary.title | xml_escape }}" />
    {% else %}
    {% assign first_h1 = summary.content | markdownify | split: '<h1' | last | split: '</h1>' | first | split: '>' | last | strip_html %}
    <title type="html">{{ first_h1 | xml_escape }}</title>
    <link href="{{ site.url }}{{ site.baseurl }}{{ summary.url | xml_escape }}" rel="alternate" type="text/html" title="{{ first_h1 | xml_escape }}" />
    {% endif %}
    <published>{{ summary.git_published | default: summary.date | date_to_xmlschema }}</published>
    <updated>{{ summary.git_last_modified | default: summary.git_published | default: summary.date | date_to_xmlschema }}</updated>
    <id>{{ site.url }}{{ site.baseurl }}{{ summary.url | xml_escape }}</id>
    <content type="text" xml:base="{{ site.url }}{{ site.baseurl }}{{ summary.url | xml_escape }}">{{ summary.content | xml_escape }}</content>
    <author>
      <name>{{ site.title }}</name>
      <email>{{ site.email }}</email>
    </author>
    <summary type="html">{{ summary.content | strip_html | truncatewords: 50 | xml_escape }}</summary>
    {% if summary.test_code %}
    <category term="{{ summary.test_code | xml_escape }}" />
    {% endif %}
    {% assign path_parts = summary.path | split: "/" %}
    {% if path_parts.size > 1 %}
    <category term="{{ path_parts[0] | xml_escape }}" />
    {% if path_parts.size > 2 %}
    <category term="{{ path_parts[1] | xml_escape }}" />
    {% endif %}
    {% endif %}
  </entry>
  {% endfor %}
</feed>